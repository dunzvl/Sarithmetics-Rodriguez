<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="347dp"
        android:layout_height="505dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="sans-serif-black"
            android:gravity="top"
            android:text="Practice"
            android:textColor="#7B3F18"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/upper_layout"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true">

                    <Button
                        android:id="@+id/plus_button"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:typeface="normal"
                        app:backgroundTint="#FF6B6B"
                        app:icon="@drawable/plus"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp" />

                    <Button
                        android:id="@+id/addheart_button"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:typeface="normal"
                        android:visibility="gone"
                        app:backgroundTint="#FFDE60EA"
                        app:icon="@drawable/heart_plus"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true">

                    <Button
                        android:id="@+id/minus_button"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:typeface="normal"
                        app:backgroundTint="#EE9A4D"
                        app:icon="@drawable/minus"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp" />

                    <Button
                        android:id="@+id/subheart_button"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:typeface="normal"
                        android:visibility="gone"
                        app:backgroundTint="#FFDE60EA"
                        app:icon="@drawable/heart_minus"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true">

                    <Button
                        android:id="@+id/cross_button"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:typeface="normal"
                        app:backgroundTint="#51D280"
                        app:icon="@drawable/cross"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp" />

                    <Button
                        android:id="@+id/addtime_button"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_button"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:typeface="normal"
                        android:visibility="gone"
                        app:backgroundTint="#746FF4"
                        app:icon="@drawable/timer_plus"
                        app:iconGravity="textEnd"
                        app:iconPadding="0dp" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/round_layout"
                android:backgroundTint="#FFFFFF"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:paddingBottom="5dp"
                    android:text="Receipt"
                    android:textColor="#7B3F18"
                    android:textSize="24sp" />


                <LinearLayout
                    android:id="@+id/sign_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/plusSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/plus"
                        app:tint="#FE6B6B" />

                    <ImageView
                        android:id="@+id/minusSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/plusSign"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/minus"
                        app:tint="#ED994D" />

                    <ImageView
                        android:id="@+id/crossSign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/minusSign"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cross"
                        app:tint="#51D17F" />

                    <ImageView
                        android:id="@+id/divideSign"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/crossSign"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/divide"
                        app:tint="#6BB7FE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/heart1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/heart" />

                    <ImageView
                        android:id="@+id/heart2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:srcCompat="@drawable/heart" />

                    <ImageView
                        android:id="@+id/heart3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/heart" />

                    <ImageView
                        android:id="@+id/heart4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/heart" />

                    <ImageView
                        android:id="@+id/heart5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/heart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center|right"
                        android:text="30s"
                        android:textColor="#7B3F18"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/timer" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center|right"
                    android:text="High Score:"
                    android:textColor="#7B3F18"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="right|top"
                    android:text="0"
                    android:textColor="#7B3F18"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:id="@+id/space3"
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/lower_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true">

                <Button
                    android:id="@+id/divide_button"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/round_button"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:typeface="normal"
                    app:backgroundTint="#6BB8FF"
                    app:icon="@drawable/divide"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp" />

                <Button
                    android:id="@+id/subtime_button"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/round_button"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:typeface="normal"
                    android:visibility="gone"
                    app:backgroundTint="#746FF4"
                    app:icon="@drawable/timer_minus"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp" />
            </LinearLayout>


            <Space
                android:id="@+id/space2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/play_button"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/round_button"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="20sp"
                android:typeface="normal"
                app:backgroundTint="#7B3F18"
                app:icon="@drawable/play"
                app:iconGravity="textEnd"
                app:iconPadding="0dp" />

            <Space
                android:id="@+id/space1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/pracsettings_button"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/round_button"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:textSize="20sp"
                android:typeface="normal"
                app:backgroundTint="#7570F5"
                app:icon="@drawable/gear"
                app:iconGravity="textEnd"
                app:iconPadding="0dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>